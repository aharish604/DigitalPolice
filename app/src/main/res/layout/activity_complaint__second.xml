<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Register">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:text="Description:"

            android:textSize="20sp"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:hint="write a Complaint here"

            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:id="@+id/description"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:text="Upload any Proofs If it's There With You \n Example:Images,videos"
            android:textColor="#2D0BEE"
            android:textSize="20sp"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:orientation="horizontal" >

           <TextView
               android:layout_width="150dp"
               android:layout_height="40dp"

               android:text="Upload Image:"

               android:textSize="20sp"
               />
           <Button
               android:layout_width="200dp"
               android:layout_height="50dp"

               android:text="Upload"
               />


       </LinearLayout>


        <Button

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Submit Complaint"
            android:textStyle="bold"
            android:layout_gravity="center"


            />


    </LinearLayout>

</ScrollView>